<%= form_for @school_class, :html => { :class => 'form-horizontal' } do |f| %>
    <%= render 'shared/error_messages', object: @school_class %>
    <div class="control-group">
      <%= f.label :name, t("form.school_class.name"), :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field', require: true %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit :class => 'btn btn-primary' %>
      <%= link_to t("helpers.actions.cancel"),
                  school_classes_path, :class => 'btn' %>
    </div>
<% end %>
